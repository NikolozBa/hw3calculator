<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text=" "
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#55ABCA"
            android:text="!"
            android:onClick="singleNumAct"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#55ABCA"
            android:text="√"
            android:onClick="singleNumAct"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#55ABCA"
            android:text="±"
            android:onClick="singleNumAct"
            android:textColor="@color/white"
            android:textSize="22sp" />


    </LinearLayout>


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/equalsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#03DAC5"
                android:onClick="operationClick"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6005D"
                android:onClick="operationClick"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#03DAC5"
                android:onClick="operationClick"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#0055FF"
                android:text="C"
                android:onClick="singleNumAct"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#007002"
                android:onClick="numberClick"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#0055FF"
                android:text="."
                android:onClick="numberClick"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6005D"
                android:onClick="operationClick"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/equalsButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#03DAC5"
        android:onClick="equalsClick"
        android:text="="
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>